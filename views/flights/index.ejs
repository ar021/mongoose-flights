<!DOCTYPE html>
<html lang="en">
  <head>
<%- include('../partials/header') %>
    <title>Flights</title>
  </head>
  <body>
    <h1>Flights List</h1>
    <table class="table table-striped">
      <thead >
        <tr>
          <th>Airline</th>
          <th>Airport</th>
          <th>Flight No</th>
          <th>Departs</th>
        </tr>
      </thead>
      <tbody>
        <% flightsArry.forEach(function(flight){ %>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs %></td>
        </tr>
        <br />
        <% }); %>
      </tbody>
  </body>
</html>
